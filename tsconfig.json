{
    "compilerOptions": {
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "incremental": true,
      "esModuleInterop": true,
      "declaration": true,
      "sourceMap": true,
      "baseUrl": ".",
      "strictPropertyInitialization": false,
      "paths": {
        "@harubot/*": ["packages/*/src"]
      }
    },
    "exclude": ["**/node_modules", "**/dist"]
  }